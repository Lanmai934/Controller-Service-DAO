{
  "name": "frontend-app",
  "version": "1.0.0",
  "description": "Vue.js前端应用 - 与Backend API分离",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit",
    "generate-api": "swagger-typescript-api generate -p ../backend/openapi.json -o ./src/api -n api.ts --modular --axios --clean-output",
    "generate-api-from-file": "swagger-typescript-api generate -p ../openapi.json -o src/api -n api.ts --modular --axios --clean-output",
    "fetch-openapi": "curl -o ../openapi.json http://localhost:3000/api-docs/swagger.json",
    "sync-api": "npm run fetch-openapi && npm run generate-api-from-file",
    "watch-api": "node scripts/sync-api.js",
    "dev:with-sync": "concurrently \"npm run dev\" \"npm run watch-api\"",
    "mock": "prism mock ../openapi.json --host 0.0.0.0 --port 4010",
    "setup": "npm install && npm run sync-api",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@vueuse/core": "^10.5.0",
    "axios": "^1.6.0",
    "element-plus": "^2.4.4",
    "pinia": "^2.1.7",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.25.0",
    "@stoplight/prism-cli": "^5.14.2",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.4.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.3",
    "swagger-typescript-api": "^13.2.16",
    "typescript": "~5.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^1.8.19"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}