{
  "name": "controller-service-dao",
  "version": "1.0.0",
  "description": "Express后台服务，采用经典三层架构 (Controller-Service-DAO)",
  "main": "app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "node test-db-connection.js",
    "generate-sdk": "node scripts/generate-sdk.js",
    "sync-api": "node scripts/sync-api.js",
    "start-mock": "node scripts/start-mock.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run sync-api\"",
    "setup:frontend": "cd frontend && npm install"
  },
  "keywords": [
    "express",
    "nodejs",
    "mvc",
    "controller",
    "service",
    "dao"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.15.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
