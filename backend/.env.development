# 开发环境配置
NODE_ENV=development
PORT=3000

# 前端URL配置
FRONTEND_URLS=http://localhost:5173,http://localhost:3000

# 数据库配置 (使用SQLite进行开发)
DB_TYPE=sqlite
DB_PATH=./data/development.db
# MySQL配置 (生产环境使用)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=controller_service_dao
# DB_USER=root
# DB_PASSWORD=123456

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-for-development
JWT_EXPIRES_IN=24h

# 日志配置
LOG_LEVEL=debug

# API配置
API_PREFIX=/api
API_VERSION=v1